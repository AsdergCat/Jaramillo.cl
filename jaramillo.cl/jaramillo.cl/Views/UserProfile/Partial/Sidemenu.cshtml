@{ 
    var action = ViewContext.RouteData.Values["action"];

    var profileURL = Url.Action("Profile", "UserProfile");
    var updateProfileURL = Url.Action("UpdateProfile", "UserProfile");
    var appointmentURL = Url.Action("CheckBookings", "UserProfile");
    var changePsw = Url.Action("ChangePassword", "UserProfile");
}

<div class="sidebar-box">
    <div class="categories">

        <a class="px-3 py-2 mb-3 d-flex row d-md-none border rounded" data-toggle="collapse" href="#side-menu-container" >
            <h3 class="font-weight-bold m-0">Menú</h3>
            <i class="fa fa-caret-down ml-2 d-flex align-items-center"></i>
        </a>

        <div class="collapse d-md-block" id="side-menu-container">
            <div class="pb-5">
                <li class="@(action.Equals("Profile") ? "active" : "")">
                    <a href="@profileURL">
                        Perfil <span class="fa fa-chevron-right"></span>
                    </a>
                </li>

                @if (User.IsInRole("CLI"))
                {
                    <li class="@(action.Equals("CheckBookings") ? "active" : "")">
                        <a href="@appointmentURL">
                            Horas Agendadas <span class="fa fa-chevron-right"></span>
                        </a>
                    </li>
                }

                <li class="@(action.Equals("UpdateProfile") ? "active" : "")">
                    <a href="@updateProfileURL">
                        Actualizar Datos <span class="fa fa-chevron-right"></span>
                    </a>
                </li>

                <li class="@(action.Equals("ChangePassword") ? "active" : "")">
                    <a href="@changePsw">
                        Cambiar Contraseña <span class="fa fa-chevron-right"></span>
                    </a>
                </li>
            </div>

        </div>
    </div>
</div>