@model jaramillo.cl.Models.APIModels.BookingVM

<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Comprobante Reserva</title>
        @Styles.Render("~/ContentCSS")
    </head>

    <body>
        <style>
            @@page { size: auto;  margin: 0mm; }
            body{
                padding: 3rem;
            }
        </style>

        <div class="row justify-content-center">
            <div class="col-6">

                <h1 class="mb-0"> Comprobante de Reserva </h1>
                <h2 class="mb-0">Jaramillo.cl</h2>

                <small class="font-italic"> <strong class="mr-3">Código</strong> @Model.booking_id  </small>

                <div class="mt-3">
                    <div class="row">
                        <p class="font-weight-bold mr-3">Servicio</p>
                        <p>@Model.servName</p>
                    </div>
                
                    <div class="row">
                        <p class="font-weight-bold mr-3">Horario</p>
                        <p>@Model.schedule</p>
                    </div>
                    <div class="row mb-0">
                        <p class="font-weight-bold mr-3">Nombre</p>
                        <p>@Model.userName</p>
                    </div>
                
                    <div class="row">
                        <p class="font-weight-bold mr-3">Rut</p>
                        <p>@Model.user.rut</p>
                    </div>
                </div>

            </div>
        </div>

        <script>
            window.print();
        </script>

    </body>
</html>

