@model jaramillo.cl.Models.ViewModels.MechMailVM


<div id="modal-mail" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">

        @using (Html.BeginForm("ContactMech", "PublicacionMec", FormMethod.Post))
        {
            <div class="modal-header">
                <h3 class="modal-title">Contactar un Mecánico</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <p>Envié un correo y se contactaran a su mail!</p>

                <div class="form-group mb-3">
                    <label for="user"><small>Nombre</small></label>
                    @Html.TextBoxFor(m => m.user, new { @class = "form-control" , @placeholder = "Nombre"})
                    @Html.ValidationMessageFor(m => m.user)
                </div>

                <div class="form-group mb-3">
                    <label for="email"><small>Email</small></label>
                    @Html.TextBoxFor(m => m.email, new { @class = "form-control" , @placeholder = "Mail"})
                    @Html.ValidationMessageFor(m => m.email)
                </div>
                
                <div class="form-group mb-3">
                    <label for="message"><small>Mensaje</small></label>
                    @Html.TextAreaFor(m => m.message, new { @class = "form-control", @rows = "6", @placeholder = "Mensaje" })
                    @Html.ValidationMessageFor(m => m.message)
                </div>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    <i class="fa fa-backspace"></i>
                    Close
                </button>
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-envelope"></i>
                    Enviar
                </button>
            </div>
        }

    </div>
  </div>
</div>

